<% unless @product.featured_video.blank? %>
  <div id="video-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="video-modal-btn" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h4 class="modal-title" id="video-modal-btn"><%= @product.name %> Featured Video</h4>
        </div>
        <div class="modal-body">
          <%= cache ["wistia", @product.featured_video], expires_in: 7.day do %>
            <%= video_embed_code(@product.featured_video) %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Close</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
